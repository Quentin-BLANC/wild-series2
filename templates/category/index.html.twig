{% extends "base.html.twig" %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}

    <h1>Toutes les catégories de la table category : </h1>

    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / {{ category.name }}</h2>
            <a href="{{ path('category_show', { categoryName: category.name }) }}">
                Voir la catégorie
            </a>
        </div>
    {% else %}
        Aucune catégories trouvée.
    {% endfor %}

    <a href="{{ path('category_new') }}">Ajouter une catégorie</a>

    <div>
        <a href="{{ path('app_index') }}">Retour à l'accueil</a>
    </div>

{% endblock %}